rss(version="2.0")
  channel
    title #{user} - #{listName}
    link= "http://tweeterfeeds.com"
    link(rel="hub",href="http://jga.no.de/hub")
    - tweets.forEach(function(tweet) {
      item 
        pubDate= tweet.created
        guid tweeterfeeds,#{user},#{listName},#{tweet._id}
        title 
          :cdata
            #{tweet.user_screen_name}: !{urlize(tweet.text)}
        description
          :cdata
            <div style="float: left; margin-right: 10px; width: 120px; text-align: center; overflow: hidden;">
              <img src="#{tweet.user_avatar}" width="48" />
              <p>#{tweet.user_screen_name}</p>
            </div>
            <div>
              <p style="font-size: 18px;">!{urlize(tweet.text)}</p>
              <p>#{tweet.created}</p>
            </div>
    - })
